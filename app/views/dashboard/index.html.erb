<% content_for(:title) { t('dashboard.title') } %>

<%= render layout: "shared/authenticated_layout", locals: { current_page: "dashboard" } do %>
  <div x-data="{ showLimitModal: <%= @is_free_plan && @messages_this_month >= @message_limit %>, showBanner: <%= @is_free_plan && @messages_this_month >= 8 && @messages_this_month < @message_limit %> }">

    <!-- Upgrade Banner (when 80%+ usage) -->
    <% if @is_free_plan && @messages_this_month >= 8 && @messages_this_month < @message_limit %>
      <div
        x-show="showBanner"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 -translate-y-2"
        x-transition:enter-end="opacity-100 translate-y-0"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 translate-y-0"
        x-transition:leave-end="opacity-0 -translate-y-2"
        class="mb-6 bg-amber-50 border border-amber-200 rounded-xl p-4 relative"
      >
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-8 h-8 bg-amber-100 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-amber-800">
                <%= t('dashboard.usage_banner.used_messages', used: @messages_this_month, limit: @message_limit) %>
              </p>
              <p class="text-sm text-amber-700 mt-0.5">
                <%= t('dashboard.usage_banner.upgrade_description') %>
              </p>
            </div>
          </div>
          <div class="flex items-center gap-3 sm:flex-shrink-0">
            <%= link_to pricing_path, class: "inline-flex items-center px-4 py-2 bg-amber-600 text-white text-sm font-medium rounded-lg hover:bg-amber-700 transition-colors" do %>
              <%= t('dashboard.usage_banner.view_plans') %>
            <% end %>
            <button
              @click="showBanner = false"
              class="text-amber-600 hover:text-amber-800 p-1"
              aria-label="Dismiss"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>

    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= t('dashboard.heading') %></h1>
        <p class="text-gray-500 mt-1"><%= t('dashboard.subtitle') %></p>
      </div>
      <%= link_to new_message_path, class: "inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-sm" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t('dashboard.new_message') %>
      <% end %>
    </div>

    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
      <!-- Total Messages - Available for all -->
      <div class="bg-white rounded-xl border border-gray-200 p-5 hover:shadow-md transition-shadow">
        <div class="flex items-center justify-between mb-3">
          <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <% if @messages_this_month > 0 %>
            <span class="text-xs text-gray-500"><%= @messages_this_month %> <%= t('dashboard.this_month') %></span>
          <% end %>
        </div>
        <p class="text-3xl font-bold text-gray-900"><%= @total_messages %></p>
        <p class="text-sm text-gray-500 mt-1"><%= t('dashboard.total_messages') %></p>
      </div>

      <!-- Open Rate - Pro only -->
      <div class="bg-white rounded-xl border border-gray-200 p-5 hover:shadow-md transition-shadow relative overflow-hidden">
        <% if @is_free_plan %>
          <div class="absolute inset-0 backdrop-blur-sm bg-white/60 z-10 flex items-center justify-center">
            <span class="inline-flex items-center gap-1 px-2 py-1 bg-primary-100 text-primary-700 text-xs font-medium rounded-full">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              Pro
            </span>
          </div>
        <% end %>
        <div class="flex items-center justify-between mb-3">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
        <p class="text-3xl font-bold text-gray-900"><%= @open_rate %>%</p>
        <p class="text-sm text-gray-500 mt-1"><%= t('dashboard.open_rate') %></p>
      </div>

      <!-- Total Opens - Pro only -->
      <div class="bg-white rounded-xl border border-gray-200 p-5 hover:shadow-md transition-shadow relative overflow-hidden">
        <% if @is_free_plan %>
          <div class="absolute inset-0 backdrop-blur-sm bg-white/60 z-10 flex items-center justify-center">
            <span class="inline-flex items-center gap-1 px-2 py-1 bg-primary-100 text-primary-700 text-xs font-medium rounded-full">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              Pro
            </span>
          </div>
        <% end %>
        <div class="flex items-center justify-between mb-3">
          <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </div>
          <% if @opens_today > 0 && !@is_free_plan %>
            <span class="inline-flex items-center gap-1 text-xs font-medium text-green-600">
              +<%= @opens_today %> <%= t('dashboard.today') %>
            </span>
          <% end %>
        </div>
        <p class="text-3xl font-bold text-gray-900"><%= @total_opens %></p>
        <p class="text-sm text-gray-500 mt-1"><%= t('dashboard.total_opens') %></p>
      </div>

      <!-- Avg Time to Open - Pro only -->
      <div class="bg-white rounded-xl border border-gray-200 p-5 hover:shadow-md transition-shadow relative overflow-hidden">
        <% if @is_free_plan %>
          <div class="absolute inset-0 backdrop-blur-sm bg-white/60 z-10 flex items-center justify-center">
            <span class="inline-flex items-center gap-1 px-2 py-1 bg-primary-100 text-primary-700 text-xs font-medium rounded-full">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              Pro
            </span>
          </div>
        <% end %>
        <div class="flex items-center justify-between mb-3">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <p class="text-3xl font-bold text-gray-900">
          <% if @avg_time_to_open > 0 %>
            <%= @avg_time_to_open %><span class="text-lg font-medium text-gray-500"><%= t('dashboard.hrs') %></span>
          <% else %>
            --
          <% end %>
        </p>
        <p class="text-sm text-gray-500 mt-1"><%= t('dashboard.avg_time_to_open') %></p>
      </div>
    </div>

    <!-- Opens Over Time Chart - Pro only -->
    <div class="bg-white rounded-xl border border-gray-200 p-6 mb-8 relative overflow-hidden">
      <% if @is_free_plan %>
        <div class="absolute inset-0 backdrop-blur-sm bg-white/70 z-10 flex flex-col items-center justify-center">
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-primary-100 text-primary-700 text-sm font-medium rounded-full mb-3">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <%= t('dashboard.pro_feature') %>
          </span>
          <p class="text-sm text-gray-600 mb-3"><%= t('dashboard.unlock_analytics') %></p>
          <%= link_to pricing_path, class: "text-sm font-medium text-primary-600 hover:text-primary-700" do %>
            <%= t('dashboard.upgrade_to_pro') %>
          <% end %>
        </div>
      <% end %>
      <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= t('dashboard.opens_over_time') %></h3>
      <div class="h-48">
        <canvas id="opensChart"></canvas>
      </div>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900"><%= t('dashboard.recent_messages') %></h3>
      </div>

      <% if @recent_messages.any? %>
        <div class="divide-y divide-gray-200">
          <% @recent_messages.each do |message| %>
            <%= link_to share_message_path(message.token), class: "block p-4 sm:p-6 hover:bg-gray-50 transition-colors" do %>
              <div class="flex gap-4">
                <% if message.first_image_attachment %>
                  <div class="flex-shrink-0">
                    <%= image_tag message.first_image_attachment.attachable.variant(resize_to_fill: [80, 80]), class: "w-16 h-16 sm:w-20 sm:h-20 object-cover rounded-lg border border-gray-200" %>
                  </div>
                <% end %>
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between gap-3">
                    <div class="flex-1 min-w-0">
                      <div class="flex items-center gap-2">
                        <p class="text-sm sm:text-base font-semibold text-gray-900 truncate"><%= message.title %></p>
                        <% if message.password_digest.present? %>
                          <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                          </svg>
                        <% end %>
                      </div>
                      <% preview = message.plain_text_preview %>
                      <% if preview.present? %>
                        <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= preview %></p>
                      <% end %>
                    </div>
                    <div class="flex flex-col items-end gap-1 flex-shrink-0">
                      <% if message.read_count > 0 %>
                        <span class="inline-flex items-center gap-1.5 text-xs font-medium text-green-700">
                          <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                          <%= t('dashboard.opened') %>
                        </span>
                        <% unless @is_free_plan %>
                          <span class="text-xs text-gray-500"><%= message.read_count %> <%= t('dashboard.opens') %></span>
                        <% end %>
                      <% else %>
                        <span class="inline-flex items-center gap-1.5 text-xs text-gray-500">
                          <span class="w-2 h-2 bg-gray-300 rounded-full"></span>
                          <%= t('dashboard.not_opened') %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <div class="flex items-center gap-3 mt-2 text-xs text-gray-500">
                    <span><%= time_ago_in_words(message.created_at) %> ago</span>
                    <% if message.expires_at.present? && message.expires_at.future? %>
                      <span class="text-amber-600">Expires <%= time_ago_in_words(message.expires_at) %></span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="p-12 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= t('dashboard.empty.title') %></h3>
          <p class="text-gray-600 mb-6 max-w-sm mx-auto">
            <%= t('dashboard.empty.subtitle') %>
          </p>
          <%= link_to new_message_path, class: "inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-sm" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <%= t('dashboard.empty.cta') %>
          <% end %>

          <% if @is_free_plan %>
            <div class="mt-8 pt-8 border-t border-gray-200">
              <p class="text-sm text-gray-500 mb-2">
                <%= t('dashboard.empty.pro_description') %>
              </p>
              <%= link_to pricing_path, class: "text-sm font-medium text-primary-600 hover:text-primary-700" do %>
                <%= t('dashboard.empty.pro_cta') %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>

      <%= render "shared/pagination" %>
    </div>

    <% if @is_free_plan && @messages_this_month >= @message_limit %>
      <div
        x-show="showLimitModal"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 z-50 flex items-center justify-center p-4"
        @keydown.escape.window="showLimitModal = false"
      >
        <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" @click="showLimitModal = false"></div>

        <div
          x-show="showLimitModal"
          x-transition:enter="transition ease-out duration-300"
          x-transition:enter-start="opacity-0 scale-95"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="transition ease-in duration-200"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-95"
          class="relative bg-white rounded-2xl shadow-2xl max-w-md w-full p-8 text-center"
        >
          <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>

          <h3 class="text-xl font-bold text-gray-900 mb-2"><%= t('dashboard.limit_modal.title') %></h3>
          <p class="text-gray-600 mb-6">
            <%= t('dashboard.limit_modal.used_messages', used: @messages_this_month, limit: @message_limit) %>
          </p>

          <div class="text-left bg-gray-50 rounded-xl p-4 mb-6">
            <p class="text-sm font-medium text-gray-700 mb-3"><%= t('dashboard.limit_modal.upgrade_for') %></p>
            <ul class="space-y-2">
              <li class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <%= t('dashboard.limit_modal.unlimited_messages') %>
              </li>
              <li class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <%= t('dashboard.limit_modal.advanced_analytics') %>
              </li>
              <li class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <%= t('dashboard.limit_modal.unlimited_history') %>
              </li>
              <li class="flex items-center gap-2 text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <%= t('dashboard.limit_modal.priority_support') %>
              </li>
            </ul>
          </div>

          <p class="text-lg font-semibold text-gray-900 mb-6"><%= t('dashboard.limit_modal.price') %></p>

          <div class="flex flex-col sm:flex-row gap-3">
            <%= link_to pricing_path, class: "flex-1 inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-primary-700 transition-colors" do %>
              <%= t('dashboard.limit_modal.upgrade') %>
            <% end %>
            <button
              @click="showLimitModal = false"
              class="flex-1 inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 rounded-xl font-medium hover:bg-gray-50 transition-colors"
            >
              <%= t('dashboard.limit_modal.not_now') %>
            </button>
          </div>

          <p class="text-xs text-gray-500 mt-4">
            <%= t('dashboard.limit_modal.resets_in', days: @days_until_reset) %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<% if @opens_by_day.any? %>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
(function() {
  // Prevent duplicate initialization
  if (window.opensChartInitialized) return;
  window.opensChartInitialized = true;

  function destroyChart() {
    if (window.opensChartInstance) {
      window.opensChartInstance.destroy();
      window.opensChartInstance = null;
    }
  }

  function initOpensChart() {
    const canvas = document.getElementById('opensChart');
    if (!canvas) return;

    // Destroy existing chart instance if any
    destroyChart();

    const ctx = canvas.getContext('2d');

    // Prepare data for last 7 days
    const labels = [];
    const data = [];
    const opensData = <%= @opens_by_day.to_json.html_safe %>;

    for (let i = 6; i >= 0; i--) {
      const date = new Date();
      date.setDate(date.getDate() - i);
      const dateStr = date.toISOString().split('T')[0];
      labels.push(date.toLocaleDateString('en-US', { weekday: 'short' }));
      data.push(opensData[dateStr] || 0);
    }

    window.opensChartInstance = new Chart(ctx, {
      type: 'line',
      data: {
        labels: labels,
        datasets: [{
          label: 'Opens',
          data: data,
          borderColor: '#10B981',
          backgroundColor: 'rgba(16, 185, 129, 0.1)',
          fill: true,
          tension: 0.4,
          pointBackgroundColor: '#10B981',
          pointBorderColor: '#fff',
          pointBorderWidth: 2,
          pointRadius: 4,
          pointHoverRadius: 6
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false
          }
        },
        scales: {
          x: {
            grid: {
              display: false
            }
          },
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 1
            },
            grid: {
              color: '#E5E7EB'
            }
          }
        }
      }
    });
  }

  // Clean up before Turbo caches the page (prevents memory leaks)
  document.addEventListener('turbo:before-cache', destroyChart);

  // Initialize on Turbo navigation (includes initial page load)
  document.addEventListener('turbo:load', initOpensChart);

  // Fallback for non-Turbo page loads
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initOpensChart);
  } else {
    initOpensChart();
  }
})();
</script>
<% end %>

<% content_for(:title) { "#{@message.title} - Analytics - MessageOpen" } %>

<div class="min-h-screen bg-white flex">
  <!-- Sidebar -->
  <aside class="hidden lg:flex lg:flex-col lg:w-64 lg:fixed lg:inset-y-0 bg-gray-50 border-r border-gray-200">
    <!-- Logo -->
    <div class="px-6 py-5 border-b border-gray-200">
      <%= link_to root_path, class: "flex items-center gap-2" do %>
        <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <span class="font-semibold text-gray-900">MessageOpen</span>
      <% end %>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 px-4 py-6 space-y-1">
      <%= link_to dashboard_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        Dashboard
      <% end %>

      <%= link_to root_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg bg-primary-50 text-primary-700" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        Messages
      <% end %>

      <%= link_to notifications_path, class: "flex items-center gap-3 px-3 py-2.5 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
        Notifications
      <% end %>
    </nav>

    <!-- User Menu -->
    <div class="px-4 py-4 border-t border-gray-200">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
          <span class="text-sm font-medium text-primary-600"><%= current_user.email[0].upcase %></span>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-sm font-medium text-gray-900 truncate"><%= current_user.email %></p>
        </div>
        <%= button_to logout_path, method: :delete, class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
        <% end %>
      </div>
    </div>
  </aside>

  <!-- Mobile Header -->
  <div class="lg:hidden fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-200">
    <div class="flex items-center justify-between px-4 h-16">
      <%= link_to dashboard_path, class: "flex items-center gap-2 text-gray-500" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back
      <% end %>
      <span class="font-semibold text-gray-900 truncate max-w-[200px]"><%= @message.title %></span>
      <div class="w-10"></div>
    </div>
  </div>

  <!-- Main Content -->
  <main class="flex-1 lg:ml-64">
    <div class="px-4 sm:px-6 lg:px-8 py-8 pt-24 lg:pt-8">
      <!-- Breadcrumb -->
      <nav class="mb-6 hidden lg:block">
        <%= link_to dashboard_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Dashboard
        <% end %>
      </nav>

      <!-- Message Header -->
      <div class="flex flex-col sm:flex-row justify-between items-start gap-4 mb-8">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <h1 class="text-2xl font-bold text-gray-900"><%= @message.title %></h1>
            <% if @message.read_count > 0 %>
              <span class="inline-flex items-center gap-1 px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">
                <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                Opened
              </span>
            <% else %>
              <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-600 text-xs font-medium rounded-full">
                <span class="w-1.5 h-1.5 bg-gray-400 rounded-full"></span>
                Not opened
              </span>
            <% end %>
          </div>
          <p class="text-gray-500">Created <%= time_ago_in_words(@message.created_at) %> ago</p>
        </div>
        <div class="flex items-center gap-3">
          <button
            type="button"
            onclick="copyLink()"
            class="inline-flex items-center gap-2 bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            Copy Link
          </button>
          <%= link_to share_message_path(@message.token), class: "inline-flex items-center gap-2 bg-primary-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
            View Details
          <% end %>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="bg-white rounded-xl border border-gray-200 p-5">
          <p class="text-sm text-gray-500 mb-1">Total Opens</p>
          <p class="text-3xl font-bold text-gray-900"><%= @message.read_count %></p>
        </div>
        <div class="bg-white rounded-xl border border-gray-200 p-5">
          <p class="text-sm text-gray-500 mb-1">Unique Viewers</p>
          <p class="text-3xl font-bold text-gray-900"><%= @message.unique_reader_count %></p>
        </div>
        <div class="bg-white rounded-xl border border-gray-200 p-5">
          <p class="text-sm text-gray-500 mb-1">First Opened</p>
          <p class="text-lg font-semibold text-gray-900">
            <% if @message.read_events.any? %>
              <%= time_ago_in_words(@message.read_events.minimum(:read_at)) %> ago
            <% else %>
              --
            <% end %>
          </p>
        </div>
        <div class="bg-white rounded-xl border border-gray-200 p-5">
          <p class="text-sm text-gray-500 mb-1">Last Opened</p>
          <p class="text-lg font-semibold text-gray-900">
            <% if @message.read_events.any? %>
              <%= time_ago_in_words(@message.read_events.maximum(:read_at)) %> ago
            <% else %>
              --
            <% end %>
          </p>
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Link Card -->
        <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-100">
            <h3 class="font-semibold text-gray-900">Shareable Link</h3>
          </div>
          <div class="p-6">
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-100 mb-4">
              <code id="share-link" class="text-sm font-mono text-gray-900 break-all"><%= read_message_url(@message.token) %></code>
            </div>

            <!-- Settings Summary -->
            <div class="space-y-3">
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">Password Protected</span>
                <% if @message.password_digest.present? %>
                  <span class="inline-flex items-center gap-1 text-purple-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Yes
                  </span>
                <% else %>
                  <span class="text-gray-400">No</span>
                <% end %>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">Expires</span>
                <% if @message.expires_at.present? %>
                  <span class="<%= @message.expires_at.future? ? 'text-amber-700' : 'text-red-700' %>">
                    <%= @message.expires_at.future? ? format_date_short(@message.expires_at) : 'Expired' %>
                  </span>
                <% else %>
                  <span class="text-gray-400">Never</span>
                <% end %>
              </div>
              <div class="flex items-center justify-between text-sm">
                <span class="text-gray-500">Read Limit</span>
                <% if @message.max_read_count.present? %>
                  <span class="text-blue-700"><%= @message.max_read_count %> view<%= @message.max_read_count > 1 ? 's' : '' %></span>
                <% else %>
                  <span class="text-gray-400">Unlimited</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Open Timeline -->
        <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-100">
            <h3 class="font-semibold text-gray-900">Open Timeline</h3>
          </div>
          <div class="p-6 max-h-96 overflow-y-auto">
            <% if @grouped_reads.any? %>
              <ul class="space-y-4">
                <% @grouped_reads.each_with_index do |(viewer_hash, events), index| %>
                  <li class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                      <span class="text-sm font-medium text-primary-600">#<%= @grouped_reads.size - index %></span>
                    </div>
                    <div class="flex-1">
                      <div class="flex items-center justify-between mb-1">
                        <p class="font-medium text-gray-900">Viewer <%= @grouped_reads.size - index %></p>
                        <span class="text-xs text-gray-500"><%= events.size %> view<%= events.size > 1 ? 's' : '' %></span>
                      </div>
                      <ul class="space-y-1">
                        <% events.reverse.first(3).each do |event| %>
                          <li class="flex items-center gap-2 text-sm text-gray-500">
                            <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                            <%= time_ago_in_words(event.read_at) %> ago
                            <% if event.user_agent.present? %>
                              <span class="text-gray-400">
                                <% if event.user_agent.downcase.include?('mobile') || event.user_agent.downcase.include?('iphone') || event.user_agent.downcase.include?('android') %>
                                  (Mobile)
                                <% else %>
                                  (Desktop)
                                <% end %>
                              </span>
                            <% end %>
                          </li>
                        <% end %>
                        <% if events.size > 3 %>
                          <li class="text-xs text-gray-400">+ <%= events.size - 3 %> more views</li>
                        <% end %>
                      </ul>
                    </div>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <div class="text-center py-8">
                <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
                  <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                </div>
                <p class="text-sm text-gray-500">No opens yet</p>
                <p class="text-xs text-gray-400 mt-1">Share the link to start tracking</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Message Content Preview -->
      <div class="mt-8 bg-white rounded-xl border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
          <h3 class="font-semibold text-gray-900">Message Content</h3>
        </div>
        <div class="p-6">
          <div class="prose prose-sm max-w-none text-gray-600">
            <%= @message.content %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
function copyLink() {
  const link = document.getElementById('share-link').textContent;
  navigator.clipboard.writeText(link).then(() => {
    alert('Link copied to clipboard!');
  });
}
</script>

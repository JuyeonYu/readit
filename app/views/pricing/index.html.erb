<!-- Pricing Toggle Script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const monthlyBtn = document.querySelector('[data-pricing-toggle-target="monthlyBtn"]');
  const yearlyBtn = document.querySelector('[data-pricing-toggle-target="yearlyBtn"]');
  const proPrice = document.querySelector('[data-pricing-toggle-target="proPrice"]');
  const proBilling = document.querySelector('[data-pricing-toggle-target="proBilling"]');
  const teamPrice = document.querySelector('[data-pricing-toggle-target="teamPrice"]');

  if (!monthlyBtn || !yearlyBtn) return;

  monthlyBtn.addEventListener('click', function() {
    monthlyBtn.classList.add('bg-primary-600', 'text-white');
    monthlyBtn.classList.remove('text-gray-600');
    yearlyBtn.classList.remove('bg-primary-600', 'text-white');
    yearlyBtn.classList.add('text-gray-600');

    if (proPrice) proPrice.textContent = '$12';
    if (proBilling) proBilling.textContent = 'Billed monthly';
    if (teamPrice) teamPrice.textContent = '$39';
  });

  yearlyBtn.addEventListener('click', function() {
    yearlyBtn.classList.add('bg-primary-600', 'text-white');
    yearlyBtn.classList.remove('text-gray-600');
    monthlyBtn.classList.remove('bg-primary-600', 'text-white');
    monthlyBtn.classList.add('text-gray-600');

    if (proPrice) proPrice.textContent = '$10';
    if (proBilling) proBilling.textContent = '$120/year (save $24)';
    if (teamPrice) teamPrice.textContent = '$33';
  });
});
</script>

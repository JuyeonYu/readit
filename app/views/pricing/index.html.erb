          <svg class="h-6 text-gray-400" viewBox="0 0 50 16" fill="currentColor">
            <circle cx="18" cy="8" r="7" fill-opacity="0.8"/>
            <circle cx="32" cy="8" r="7" fill-opacity="0.6"/>
          </svg>
          <svg class="h-5 text-gray-400" viewBox="0 0 50 16" fill="currentColor">
            <rect width="50" height="16" rx="2" fill-opacity="0.3"/>
            <text x="25" y="11" text-anchor="middle" font-size="8" font-weight="bold" fill="currentColor">AMEX</text>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-white border-t border-gray-100">
    <div class="max-w-3xl mx-auto">
      <button
        @click="showComparison = !showComparison"
        class="w-full flex items-center justify-center gap-2 text-gray-700 hover:text-gray-900 mb-8"
      >
        <span class="text-lg font-semibold"><%= t('pricing.compare.title') %></span>
        <svg
          class="w-5 h-5 transition-transform"
          :class="showComparison ? 'rotate-180' : ''"
          fill="none" stroke="currentColor" viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
        </svg>
      </button>

      <div x-show="showComparison" x-collapse x-cloak>
        <div class="bg-gray-50 rounded-2xl border border-gray-200 overflow-hidden">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-200">
                <th class="text-left py-4 px-6 font-medium text-gray-500 bg-gray-50"><%= t('pricing.compare.feature') %></th>
                <th class="text-center py-4 px-6 font-semibold text-gray-900 bg-gray-50"><%= t('pricing.free.name') %></th>
                <th class="text-center py-4 px-6 font-semibold text-primary-600 bg-primary-50"><%= t('pricing.pro.name') %></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <tr>
                <td class="py-4 px-6 text-gray-700"><%= t('pricing.compare.tracked_messages') %></td>
                <td class="text-center py-4 px-6 text-gray-600"><%= t('pricing.compare.ten_month') %></td>
                <td class="text-center py-4 px-6 text-gray-900 bg-primary-50/50 font-semibold"><%= t('pricing.compare.unlimited') %></td>
              </tr>
              <tr>
                <td class="py-4 px-6 text-gray-700"><%= t('pricing.compare.message_history') %></td>
                <td class="text-center py-4 px-6 text-gray-600"><%= t('pricing.compare.seven_days') %></td>
                <td class="text-center py-4 px-6 text-gray-900 bg-primary-50/50 font-semibold"><%= t('pricing.compare.unlimited_history') %></td>
              </tr>
              <tr>
                <td class="py-4 px-6 text-gray-700"><%= t('pricing.compare.analytics') %></td>
                <td class="text-center py-4 px-6 text-gray-600"><%= t('pricing.compare.basic') %></td>
                <td class="text-center py-4 px-6 text-gray-900 bg-primary-50/50 font-semibold"><%= t('pricing.compare.detailed') %></td>
              </tr>
              <tr>
                <td class="py-4 px-6 text-gray-700"><%= t('pricing.compare.open_tracking') %></td>
                <td class="text-center py-4 px-6">
                  <svg class="w-5 h-5 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </td>
                <td class="text-center py-4 px-6 bg-primary-50/50">
                  <svg class="w-5 h-5 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </td>
              </tr>
              <tr>
                <td class="py-4 px-6 text-gray-700"><%= t('pricing.compare.open_count') %></td>
                <td class="text-center py-4 px-6">
                  <span class="text-gray-300">—</span>
                </td>
                <td class="text-center py-4 px-6 bg-primary-50/50">
                  <svg class="w-5 h-5 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </td>
              </tr>

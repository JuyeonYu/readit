<% content_for(:title) { t('pricing.title') } %>

<div class="min-h-screen bg-gray-50" x-data="{ yearly: false, showComparison: false, loading: false }">
  <nav class="bg-white border-b border-gray-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <%= render "shared/logo" %>
        <div class="flex items-center gap-4">
          <% if logged_in? %>
            <%= link_to t('nav.dashboard'), dashboard_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
          <% else %>
            <%= link_to t('common.login'), login_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
            <%= link_to t('nav.start_free'), login_path, class: "bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-primary-700 transition-colors" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <section class="pt-16 pb-8 px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4"><%= t('pricing.hero.title') %></h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-10"><%= t('pricing.hero.subtitle') %></p>

    <div class="inline-flex items-center bg-white rounded-full p-1.5 shadow-sm border border-gray-200">
      <button
        @click="yearly = false"
        :class="!yearly ? 'bg-primary-600 text-white shadow-sm' : 'text-gray-600 hover:text-gray-900'"
        class="px-5 py-2.5 rounded-full text-sm font-medium transition-all"
      >
        <%= t('pricing.toggle.monthly') %>
      </button>
      <button
        @click="yearly = true"
        :class="yearly ? 'bg-primary-600 text-white shadow-sm' : 'text-gray-600 hover:text-gray-900'"
        class="px-5 py-2.5 rounded-full text-sm font-medium transition-all flex items-center gap-2"
      >
        <%= t('pricing.toggle.yearly') %>
        <span class="bg-green-100 text-green-700 text-xs font-semibold px-2 py-0.5 rounded-full"><%= t('pricing.toggle.save') %></span>
      </button>
    </div>
  </section>

  <section class="pb-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-8 items-start">

        <div class="bg-white rounded-2xl border border-gray-200 p-8 md:p-10 shadow-sm hover:shadow-md transition-shadow">
          <h3 class="text-xl font-semibold text-gray-900 mb-4"><%= t('pricing.free.name') %></h3>

          <div class="mb-2">
            <span class="text-5xl font-bold text-gray-900"><%= t('pricing.free.price') %></span>
          </div>
          <p class="text-gray-500 text-sm mb-8"><%= t('pricing.free.period') %></p>

          <div class="border-t border-gray-100 pt-8 mb-8">
            <ul class="space-y-4">
              <% %w[messages tracking history notifications editor].each do |feature| %>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span class="text-gray-700"><%= t("pricing.free.#{feature}") %></span>
                </li>
              <% end %>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-700"><%= t("pricing.free.attachments") %></span>
              </li>
            </ul>
          </div>

          <% if logged_in? %>
            <span class="block w-full text-center py-3.5 px-4 border-2 border-gray-200 text-gray-400 rounded-xl font-semibold bg-gray-50 cursor-not-allowed">
              <%= current_user.pro? ? t('pricing.free.downgrade_not_available') : t('pricing.free.current_plan') %>
            </span>
          <% else %>
            <%= link_to login_path, class: "block w-full text-center py-3.5 px-4 border-2 border-primary-600 text-primary-600 rounded-xl font-semibold hover:bg-primary-50 transition-colors" do %>
              <%= t('pricing.free.cta') %>
            <% end %>
          <% end %>
          <p class="text-xs text-gray-500 text-center mt-3"><%= t('pricing.free.note') %></p>
        </div>

        <div class="bg-white rounded-2xl border-2 border-primary-500 p-8 md:p-10 shadow-xl relative md:scale-105 origin-top">
          <div class="absolute -top-4 left-1/2 -translate-x-1/2">
            <span class="bg-primary-600 text-white text-sm font-semibold px-4 py-1.5 rounded-full shadow-sm">
              <%= t('pricing.pro.badge') %>
            </span>
          </div>

          <h3 class="text-xl font-semibold text-gray-900 mb-4 mt-2"><%= t('pricing.pro.name') %></h3>

          <div class="mb-2">
            <span class="text-5xl font-bold text-gray-900" x-text="yearly ? '$10' : '$12'">$12</span>
            <span class="text-gray-500 ml-1"><%= t('pricing.pro.monthly') %></span>
          </div>
          <p class="text-gray-500 text-sm mb-8">
            <span x-show="!yearly"><%= t('pricing.pro.billed_monthly') %></span>
            <span x-show="yearly" x-cloak class="text-green-600 font-medium"><%= t('pricing.pro.billed_yearly') %></span>
          </p>

          <div class="border-t border-gray-100 pt-8 mb-8">
            <p class="text-sm font-medium text-gray-500 mb-4"><%= t('pricing.pro.everything_plus') %></p>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-gray-900 font-semibold"><%= t('pricing.pro.unlimited') %></span>
              </li>
              <% %w[analytics history receipts password webhooks support].each do |feature| %>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span class="text-gray-700"><%= t("pricing.pro.#{feature}") %></span>
                </li>
              <% end %>
            </ul>
          </div>

          <% if logged_in? && current_user.pro? %>
            <span class="block w-full text-center py-4 px-4 bg-gray-100 text-gray-400 rounded-xl font-semibold cursor-not-allowed text-lg">
              <%= t('pricing.pro.current_plan') %>
            </span>
            <p class="text-xs text-gray-500 text-center mt-3">
              <%= link_to t('pricing.pro.manage_subscription'), billing_path, class: "text-primary-600 hover:underline" %>
            </p>
          <% elsif logged_in? %>
            <div x-show="!yearly">
              <a href="<%= upgrade_monthly_path %>" data-turbo="false" @click="loading = true"
                 :class="loading && 'opacity-75 pointer-events-none'"
                 class="block w-full text-center py-4 px-4 bg-primary-600 text-white rounded-xl font-semibold hover:bg-primary-700 transition-colors shadow-sm text-lg cursor-pointer">
                <span x-show="!loading"><%= t('pricing.pro.cta_monthly') %></span>
                <span x-show="loading" x-cloak class="inline-flex items-center justify-center gap-2">
                  <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path></svg>
                  <%= t('pricing.pro.cta_loading', default: 'Loading...') %>
                </span>
              </a>
            </div>
            <div x-show="yearly" x-cloak>
              <a href="<%= upgrade_yearly_path %>" data-turbo="false" @click="loading = true"
                 :class="loading && 'opacity-75 pointer-events-none'"
                 class="block w-full text-center py-4 px-4 bg-primary-600 text-white rounded-xl font-semibold hover:bg-primary-700 transition-colors shadow-sm text-lg cursor-pointer">
                <span x-show="!loading"><%= t('pricing.pro.cta_yearly') %></span>
                <span x-show="loading" x-cloak class="inline-flex items-center justify-center gap-2">
                  <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path></svg>
                  <%= t('pricing.pro.cta_loading', default: 'Loading...') %>
                </span>
              </a>
            </div>
            <p class="text-xs text-gray-500 text-center mt-3"><%= t('pricing.pro.note') %></p>
          <% else %>
            <%= link_to login_path, class: "block w-full text-center py-4 px-4 bg-primary-600 text-white rounded-xl font-semibold hover:bg-primary-700 transition-colors shadow-sm text-lg" do %>
              <%= t('pricing.pro.cta_trial') %>
            <% end %>
            <p class="text-xs text-gray-500 text-center mt-3"><%= t('pricing.pro.note') %></p>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-10">
        <p class="text-gray-600">
          <%= t('pricing.team.question') %>
          <a href="mailto:<%= support_email %>" class="text-primary-600 hover:text-primary-700 font-medium underline underline-offset-2"><%= t('pricing.team.link') %></a>
        </p>
      </div>
    </div>
  </section>

  <section class="pb-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <div class="flex flex-wrap justify-center gap-6 sm:gap-10">
        <div class="flex items-center gap-2 text-gray-500">

<% intent = params[:intent] == 'login' ? 'login' : 'signup' %>
<% opposite_intent = intent == 'login' ? 'signup' : 'login' %>

<% content_for(:title) { t("sessions.new.#{intent}.title") } %>

<div class="min-h-screen bg-gray-50 flex flex-col">
  <header class="bg-white border-b border-gray-200">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-center items-center h-16">
        <%= render "shared/logo" %>
      </div>
    </div>
  </header>

  <main class="flex-1 flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-sm">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= t("sessions.new.#{intent}.heading") %></h1>
        <p class="text-gray-600"><%= t("sessions.new.#{intent}.subtitle") %></p>
      </div>

      <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
        <%= form_with url: login_path, method: :post do |f| %>
          <div class="mb-6">
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2"><%= t('sessions.new.email_label') %></label>
            <%= f.email_field :email,
                placeholder: t('sessions.new.email_placeholder'),
                required: true,
                autofocus: true,
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
          </div>

          <button type="submit" class="w-full inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <%= t("sessions.new.#{intent}.submit") %>
          </button>
        <% end %>

        <p class="mt-4 text-xs text-center text-gray-500">
          <%= t("sessions.new.#{intent}.note") %>
        </p>

        <div class="mt-4 pt-4 border-t border-gray-100 text-center">
          <p class="text-sm text-gray-600">
            <%= t("sessions.new.#{intent}.toggle_text") %>
            <%= link_to t("sessions.new.#{intent}.toggle_link"),
                login_path(intent: opposite_intent),
                class: "text-primary-600 hover:text-primary-700 font-medium ml-1" %>
          </p>
        </div>
      </div>

      <div class="mt-8 grid grid-cols-3 gap-4 text-center">
        <div>
          <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-2">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <p class="text-xs text-gray-600"><%= t('sessions.new.benefits.no_password') %></p>
        </div>
        <div>
          <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-2">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <p class="text-xs text-gray-600"><%= t('sessions.new.benefits.secure') %></p>
        </div>
        <div>
          <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <p class="text-xs text-gray-600"><%= t('sessions.new.benefits.instant') %></p>
        </div>
      </div>
    </div>
  </main>
</div>

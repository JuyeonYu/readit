<% content_for(:title) { t('reads.expired.title') } %>

<div class="min-h-screen bg-gray-50">
  <!-- Minimal Header -->
  <header class="bg-white/80 backdrop-blur-sm border-b border-gray-100">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 py-4">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <div class="w-6 h-6 bg-primary-600 rounded flex items-center justify-center">
            <svg class="w-3.5 h-3.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700"><%= t('app.name') %></span>
        <% end %>
        <span class="text-xs text-gray-500"><%= t('app.secure_message_sharing') %></span>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="px-4 py-12 sm:py-20">
    <div class="max-w-md mx-auto text-center">
      <!-- Icon -->
      <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>

      <!-- Message -->
      <h1 class="text-2xl font-bold text-gray-900 mb-3"><%= t('reads.expired.heading') %></h1>
      <p class="text-gray-600 mb-8"><%= t('reads.expired.description') %></p>

      <!-- Info Card -->
      <div class="bg-white rounded-xl border border-gray-200 p-6 text-left mb-8">
        <p class="text-sm font-medium text-gray-700 mb-3"><%= t('reads.expired.reasons.title') %></p>
        <ul class="space-y-2 text-sm text-gray-600">
          <li class="flex items-start gap-2">
            <svg class="w-4 h-4 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= t('reads.expired.reasons.expired') %>
          </li>
          <li class="flex items-start gap-2">
            <svg class="w-4 h-4 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= t('reads.expired.reasons.limit') %>
          </li>
          <li class="flex items-start gap-2">
            <svg class="w-4 h-4 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            <%= t('reads.expired.reasons.removed') %>
          </li>
        </ul>
      </div>

      <!-- CTA -->
      <p class="text-sm text-gray-500 mb-4"><%= t('reads.expired.contact') %></p>

      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full border border-gray-200 shadow-sm">
        <span class="text-sm text-gray-600"><%= t('reads.expired.cta.question') %></span>
        <a href="<%= root_url %>" class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors">
          <%= t('reads.expired.cta.link') %>
        </a>
      </div>
    </div>
  </main>
</div>

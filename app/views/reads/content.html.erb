<% content_for(:title) { "#{@message.title} - MessageOpen" } %>

<div class="min-h-screen bg-gray-50">
  <!-- Minimal Header -->
  <header class="bg-white/80 backdrop-blur-sm border-b border-gray-100 sticky top-0 z-10">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 py-4">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <div class="w-6 h-6 bg-primary-600 rounded flex items-center justify-center">
            <svg class="w-3.5 h-3.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">MessageOpen</span>
        <% end %>
        <span class="flex items-center gap-1.5 text-xs text-gray-500">
          <svg class="w-3.5 h-3.5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Secure message
        </span>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="px-4 py-8 sm:py-12">
    <div class="max-w-2xl mx-auto">
      <!-- Message Card -->
      <article class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <!-- Sender Info -->
        <div class="px-6 sm:px-10 pt-8 sm:pt-10 pb-6 border-b border-gray-100">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full flex items-center justify-center shadow-sm">
              <span class="text-white font-medium"><%= @message.user.email[0].upcase %></span>
            </div>
            <div>
              <p class="font-medium text-gray-900"><%= @message.user.email %></p>
              <p class="text-sm text-gray-500">Shared via MessageOpen</p>
            </div>
          </div>
        </div>

        <!-- Message Content -->
        <div class="px-6 sm:px-10 py-8 sm:py-10">
          <!-- Title -->
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 leading-tight mb-6">
            <%= @message.title %>
          </h1>

          <!-- Content -->
          <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
            <%= @message.content %>
          </div>
        </div>

        <!-- Read Confirmation -->
        <div class="px-6 sm:px-10 py-4 bg-green-50 border-t border-green-100">
          <div class="flex items-center gap-2 text-sm text-green-700">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Read confirmation sent to sender</span>
          </div>
        </div>
      </article>

      <!-- Footer -->
      <footer class="mt-10 text-center space-y-4">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full border border-gray-200 shadow-sm">
          <span class="text-sm text-gray-600">Want to send secure messages?</span>
          <a href="<%= root_url %>" class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors">
            Try MessageOpen free →
          </a>
        </div>

        <p class="text-xs text-gray-400">
          MessageOpen • Secure message sharing with read receipts
        </p>
      </footer>
    </div>
  </main>
</div>

<style>
  /* Enhanced prose styling for message content */
  .prose {
    font-size: 1.0625rem;
    line-height: 1.75;
  }

  .prose p {
    margin-bottom: 1.25rem;
  }

  .prose p:last-child {
    margin-bottom: 0;
  }

  .prose a {
    color: #4F46E5;
    text-decoration: underline;
    text-decoration-color: #C7D2FE;
    text-underline-offset: 2px;
    transition: text-decoration-color 0.2s;
  }

  .prose a:hover {
    text-decoration-color: #4F46E5;
  }

  .prose strong {
    font-weight: 600;
    color: #111827;
  }

  .prose ul, .prose ol {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose blockquote {
    border-left: 3px solid #E5E7EB;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #6B7280;
    font-style: italic;
  }

  .prose img {
    border-radius: 0.75rem;
    margin: 1.5rem 0;
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #111827;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose code {
    background-color: #F3F4F6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: #1F2937;
    color: #F9FAFB;
    padding: 1rem;
    border-radius: 0.75rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose pre code {
    background: none;
    padding: 0;
    color: inherit;
  }
</style>

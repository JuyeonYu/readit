<% content_for(:title) { t('pages.home.title') } %>

<% if logged_in? %>
  <!-- Logged-in User Dashboard -->
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center gap-8">
            <%= link_to root_path, class: "flex items-center gap-2" do %>
              <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <span class="font-semibold text-gray-900"><%= t('app.name') %></span>
            <% end %>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-sm text-gray-600 hidden sm:block"><%= current_user.email %></span>
            <%= link_to dashboard_path, class: "p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors", title: t('nav.dashboard') do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            <% end %>
            <%= link_to notifications_path, class: "p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg transition-colors relative", title: t('nav.notifications') do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
            <% end %>
            <%= button_to logout_path, method: :delete, class: "text-sm text-gray-600 hover:text-gray-900 px-3 py-1.5 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors" do %>
              <%= t('common.logout') %>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Quick Action -->
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= t('dashboard.title') %></h1>
          <p class="text-gray-600 mt-1"><%= t('dashboard.subtitle') %></p>
        </div>
        <%= link_to new_message_path, class: "inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-sm" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <%= t('dashboard.new_message') %>
        <% end %>
      </div>

      <!-- Messages List -->
      <% if @messages.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <ul class="divide-y divide-gray-200">
            <% @messages.each do |message| %>
              <li class="hover:bg-gray-50 transition-colors">
                <%= link_to share_message_path(message.token), class: "block p-5" do %>
                  <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-3">
                    <div class="flex-1 min-w-0">
                      <p class="text-gray-900 font-medium truncate"><%= truncate(message.title, length: 80) %></p>
                      <p class="text-sm text-gray-500 mt-1"><%= time_ago_in_words(message.created_at) %> <%= t('common.ago') %></p>
                    </div>
                    <div class="flex flex-wrap gap-2">
                      <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-green-50 text-green-700 text-xs font-medium rounded-full">
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        <%= message.unique_reader_count %> <%= t('dashboard.message.readers') %> / <%= message.read_count %> <%= t('dashboard.message.views') %>
                      </span>
                      <% if message.expires_at.present? %>
                        <% if message.expires_at.future? %>
                          <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-amber-50 text-amber-700 text-xs font-medium rounded-full">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <%= t('dashboard.message.expires') %> <%= format_date_short(message.expires_at) %>
                          </span>
                        <% else %>
                          <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-red-50 text-red-700 text-xs font-medium rounded-full">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <%= t('common.expired') %>
                          </span>
                        <% end %>
                      <% end %>
                      <% if message.password_digest.present? %>
                        <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-purple-50 text-purple-700 text-xs font-medium rounded-full">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                          </svg>
                          <%= t('common.protected') %>
                        </span>
                      <% end %>
                      <% if message.max_read_count.present? %>
                        <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">
                          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <%= t('dashboard.message.limit') %> <%= message.max_read_count %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t('dashboard.empty.title') %></h3>
          <p class="text-gray-600 mb-6"><%= t('dashboard.empty.subtitle') %></p>
          <%= link_to new_message_path, class: "inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <%= t('dashboard.empty.cta') %>
          <% end %>
        </div>
      <% end %>
    </main>
  </div>

<% else %>
  <!-- Landing Page for Non-logged-in Users -->

  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center gap-2">
          <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="font-semibold text-gray-900"><%= t('app.name') %></span>
        </div>
        <div class="hidden md:flex items-center gap-8">
          <a href="#how-it-works" class="text-sm text-gray-600 hover:text-gray-900 transition-colors"><%= t('nav.how_it_works') %></a>
          <a href="#features" class="text-sm text-gray-600 hover:text-gray-900 transition-colors"><%= t('nav.features') %></a>
          <%= link_to t('nav.pricing'), pricing_path, class: "text-sm text-gray-600 hover:text-gray-900 transition-colors" %>
        </div>
        <div class="flex items-center gap-3">
          <%= link_to t('common.login'), login_path(intent: 'login'), class: "text-sm text-gray-600 hover:text-gray-900 transition-colors" %>
          <%= link_to t('nav.start_free'), login_path(intent: 'signup'), class: "bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-primary-700 transition-colors" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-3xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight animate-fade-in-up">
        <%= t('pages.home.hero.title_line1') %><br>
        <%= t('pages.home.hero.title_line2_prefix') %> <span class="gradient-text"><%= t('pages.home.hero.title_line2_highlight') %></span>
      </h1>
      <p class="mt-6 text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto animate-fade-in-up animation-delay-200">
        <%= t('pages.home.hero.subtitle') %>
      </p>
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4 animate-fade-in-up animation-delay-400">
        <%= link_to login_path(intent: 'signup'), class: "inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-8 py-4 rounded-lg font-medium text-lg hover:bg-primary-700 transition-all shadow-lg shadow-primary-600/25 hover:shadow-xl hover:shadow-primary-600/30 hover:-translate-y-0.5" do %>
          <%= t('pages.home.hero.cta_primary') %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        <% end %>
        <a href="#how-it-works" class="inline-flex items-center justify-center gap-2 bg-white text-gray-700 px-8 py-4 rounded-lg font-medium text-lg border border-gray-300 hover:border-gray-400 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= t('pages.home.hero.cta_secondary') %>
        </a>
      </div>

      <!-- Hero Image/Mockup -->
      <div class="mt-16 animate-fade-in-up animation-delay-600">
        <div class="relative mx-auto max-w-3xl">
          <div class="bg-white rounded-2xl shadow-2xl border border-gray-200 overflow-hidden">
            <!-- Browser Chrome -->
            <div class="bg-gray-100 px-4 py-3 flex items-center gap-2 border-b border-gray-200">
              <div class="flex gap-1.5">
                <div class="w-3 h-3 rounded-full bg-red-400"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
                <div class="w-3 h-3 rounded-full bg-green-400"></div>
              </div>
              <div class="flex-1 ml-4">
                <div class="bg-white rounded-md px-3 py-1 text-sm text-gray-500 max-w-md mx-auto">
                  messageopen.io/share/abc123
                </div>
              </div>
            </div>
            <!-- App Content Preview -->
            <div class="p-8 bg-gray-50">
              <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold text-gray-900"><%= t('pages.home.preview.example_title') %></h3>
                    <p class="text-gray-600 text-sm mt-1"><%= t('pages.home.preview.example_content') %></p>
                    <div class="mt-4 flex items-center gap-3">
                      <span class="inline-flex items-center gap-1.5 text-green-600 text-sm font-medium">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <%= t('pages.home.preview.read_ago') %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Notification Toast -->
              <div class="absolute top-24 right-4 sm:right-8 bg-white rounded-lg shadow-xl border-l-4 border-l-primary-600 border border-gray-200 p-4 sm:p-5 max-w-xs animate-pulse" style="box-shadow: 0 10px 25px -5px rgba(79, 70, 229, 0.15), 0 8px 10px -6px rgba(0, 0, 0, 0.1);">
                <div class="flex items-start gap-3">
                  <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-base font-semibold text-gray-900"><%= t('pages.home.preview.notification_title') %></p>
                    <p class="text-sm text-gray-600 mt-0.5"><%= t('pages.home.preview.notification_text') %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900"><%= t('pages.home.problems.title') %></h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100 text-center hover:shadow-md transition-shadow">
          <div class="w-14 h-14 bg-primary-50 rounded-xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('pages.home.problems.problem1.title') %></h3>
          <p class="text-gray-600"><%= t('pages.home.problems.problem1.description') %></p>
        </div>

        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100 text-center hover:shadow-md transition-shadow">
          <div class="w-14 h-14 bg-primary-50 rounded-xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('pages.home.problems.problem2.title') %></h3>
          <p class="text-gray-600"><%= t('pages.home.problems.problem2.description') %></p>
        </div>

        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100 text-center hover:shadow-md transition-shadow">
          <div class="w-14 h-14 bg-primary-50 rounded-xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('pages.home.problems.problem3.title') %></h3>
          <p class="text-gray-600"><%= t('pages.home.problems.problem3.description') %></p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900"><%= t('pages.home.how_it_works.title') %></h2>
        <p class="text-gray-600 mt-4 text-lg"><%= t('pages.home.how_it_works.subtitle') %></p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 relative">
        <div class="hidden md:block absolute top-24 left-1/6 right-1/6 h-0.5 bg-gradient-to-r from-primary-200 via-primary-400 to-primary-200"></div>

        <div class="relative">
          <div class="bg-white rounded-xl p-8 border border-gray-200 hover:border-primary-200 transition-colors relative z-10">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-xl flex items-center justify-center text-xl font-bold mb-6">1</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('pages.home.how_it_works.step1.title') %></h3>
            <p class="text-gray-600 mb-6"><%= t('pages.home.how_it_works.step1.description') %></p>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
              <div class="flex items-center gap-2 mb-3 border-b border-gray-200 pb-2">
                <div class="w-6 h-6 bg-gray-200 rounded"></div>
                <div class="w-6 h-6 bg-gray-200 rounded"></div>
                <div class="w-6 h-6 bg-gray-200 rounded"></div>
              </div>
              <div class="space-y-2">
                <div class="h-3 bg-gray-200 rounded w-3/4"></div>
                <div class="h-3 bg-gray-200 rounded w-full"></div>
                <div class="h-3 bg-gray-200 rounded w-5/6"></div>
              </div>
            </div>
          </div>
        </div>

        <div class="relative">
          <div class="bg-white rounded-xl p-8 border border-gray-200 hover:border-primary-200 transition-colors relative z-10">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-xl flex items-center justify-center text-xl font-bold mb-6">2</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3"><%= t('pages.home.how_it_works.step2.title') %></h3>
            <p class="text-gray-600 mb-6"><%= t('pages.home.how_it_works.step2.description') %></p>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
              <div class="flex items-center gap-2 justify-center flex-wrap">
                <div class="w-10 h-10 bg-white rounded-lg border border-gray-200 flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>

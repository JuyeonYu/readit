<% content_for(:title) { t('messages.new.title') } %>

<div class="min-h-screen bg-gray-50">
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center gap-8">
          <%= render "shared/logo" %>
        </div>
        <div class="flex items-center gap-4">
          <% if @is_free_plan %>
            <%
              badge_color = if @usage_percentage >= 100
                'bg-red-100 text-red-700'
              elsif @usage_percentage >= 80
                'bg-amber-100 text-amber-700'
              else
                'bg-gray-100 text-gray-600'
              end
            %>
            <span class="text-xs font-medium px-2.5 py-1 rounded-full <%= badge_color %> hidden sm:block">
              <%= @messages_this_month %>/<%= @message_limit %> <%= t('dashboard.usage.messages') %>
            </span>
          <% end %>
          <span class="text-sm text-gray-500 hidden sm:block"><%= current_user.email %></span>
          <%= link_to root_path, class: "text-sm text-gray-600 hover:text-gray-900" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%= form_with model: @message, id: "message-form", data: { turbo_frame: "_top" } do |f| %>

      <% if @message.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-xl p-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <% @message.errors.full_messages.each do |msg| %>
                <p class="text-sm text-red-700"><%= msg %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid lg:grid-cols-5 gap-8">
        <div class="lg:col-span-3">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100">
              <h1 class="text-lg font-semibold text-gray-900"><%= t('messages.new.header') %></h1>
              <p class="text-sm text-gray-500 mt-1"><%= t('messages.new.subtitle') %></p>
            </div>

            <div class="p-6">
              <div data-controller="trix-editor" class="trix-wrapper">
                <%= f.rich_text_area :content,
                    placeholder: t('messages.new.placeholder'),
                    class: "min-h-[400px] focus:outline-none",
                    data: { message_form_target: "content" } %>
              </div>
            </div>

            <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex justify-between items-center">
              <div class="flex items-center gap-3">
                <%= link_to root_path, class: "text-sm text-gray-600 hover:text-gray-900 transition-colors" do %>
                  <%= t('common.cancel') %>
                <% end %>
                <span id="content-char-count" class="text-xs text-gray-400 whitespace-nowrap">
                  0/<%= number_with_delimiter(Message::CONTENT_MAX_LENGTH) %> <%= t('common.characters') %>
                </span>
              </div>
              <button type="submit" class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
                <%= t('messages.new.generate_link') %>
              </button>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
          <!-- Basic Settings -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4"><%= t('messages.new.settings.title') %></h2>

            <div class="space-y-4">
              <div>
                <label for="message_title" class="block text-sm font-medium text-gray-700 mb-1">
                  <%= t('messages.new.settings.message_title.label') %>
                </label>
                <%= f.text_field :title,
                    id: "message-title-input",
                    placeholder: t('messages.new.settings.message_title.placeholder'),
                    maxlength: Message::TITLE_MAX_LENGTH,
                    class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
                <p class="mt-1 text-xs text-gray-500">
                  <span id="title-char-count">0</span>/<%= Message::TITLE_MAX_LENGTH %> <%= t('common.characters') %>
                </p>
              </div>

              <div class="flex items-center justify-between py-3 border-t border-gray-100">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= t('messages.new.settings.notify.label') %></p>
                  <p class="text-xs text-gray-500"><%= t('messages.new.settings.notify.description') %></p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <%= f.check_box :notify_on_read, { checked: @message.notify_on_read.nil? ? true : @message.notify_on_read, class: "sr-only peer" }, true, false %>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>

            </div>
          </div>

          <!-- Pro Features -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 <%= 'border-primary-200 bg-primary-50/30' if @is_free_plan %>">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider"><%= t('messages.new.settings.pro_features') %></h2>
              <% if @is_free_plan %>
                <%= link_to pricing_path, class: "inline-flex items-center gap-1 px-2 py-1 bg-primary-600 text-white text-xs font-medium rounded-full hover:bg-primary-700 transition-colors" do %>
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                  </svg>
                  Upgrade
                <% end %>
              <% end %>
            </div>

            <div class="space-y-4">
              <div>
                <div class="flex items-center justify-between mb-2">
                  <label class="block text-sm font-medium <%= @is_free_plan ? 'text-gray-500' : 'text-gray-900' %>"><%= t('messages.new.settings.expire.label') %></label>
                </div>
                <% if @is_free_plan %>
                  <%= link_to pricing_path, class: "block" do %>
                    <select disabled class="w-full px-4 py-2.5 border border-gray-200 rounded-lg bg-gray-50 text-gray-400 cursor-pointer appearance-none">
                      <option><%= t('common.never') %></option>
                      <option><%= t('messages.new.settings.expire.day_1') %></option>
                      <option><%= t('messages.new.settings.expire.day_7') %></option>
                      <option><%= t('messages.new.settings.expire.day_30') %></option>
                    </select>
                  <% end %>
                <% else %>
                  <select name="message[expires_in]" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white">
                    <option value=""><%= t('common.never') %></option>
                    <option value="1"><%= t('messages.new.settings.expire.day_1') %></option>
                    <option value="7"><%= t('messages.new.settings.expire.day_7') %></option>
                    <option value="30"><%= t('messages.new.settings.expire.day_30') %></option>
                  </select>
                <% end %>
              </div>

              <div class="flex items-center justify-between py-3 border-t border-gray-100">
                <div>
                  <p class="text-sm font-medium <%= @is_free_plan ? 'text-gray-500' : 'text-gray-900' %>"><%= t('messages.new.settings.one_time.label') %></p>
                  <p class="text-xs text-gray-500"><%= t('messages.new.settings.one_time.description') %></p>
                </div>
                <% if @is_free_plan %>
                  <%= link_to pricing_path, class: "relative inline-flex items-center" do %>
                    <div class="w-11 h-6 bg-gray-100 rounded-full cursor-pointer hover:bg-primary-100 transition-colors">
                      <div class="absolute top-[2px] left-[2px] bg-white border-gray-200 border rounded-full h-5 w-5"></div>
                    </div>
                  <% end %>
                <% else %>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <%= f.check_box :max_read_count,
                        { checked: @message.max_read_count == 1, class: "sr-only peer" },
                        1, nil %>
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                  </label>
                <% end %>
              </div>

              <div class="py-3 border-t border-gray-100" data-controller="password-toggle">
                <div class="flex items-center justify-between mb-3">
                  <div>
                    <p class="text-sm font-medium <%= @is_free_plan ? 'text-gray-500' : 'text-gray-900' %>"><%= t('messages.new.settings.password.label') %></p>
                    <p class="text-xs text-gray-500"><%= t('messages.new.settings.password.description') %></p>
                  </div>
                  <% if @is_free_plan %>
                    <%= link_to pricing_path, class: "relative inline-flex items-center" do %>
                      <div class="w-11 h-6 bg-gray-100 rounded-full cursor-pointer hover:bg-primary-100 transition-colors">
                        <div class="absolute top-[2px] left-[2px] bg-white border-gray-200 border rounded-full h-5 w-5"></div>
                      </div>
                    <% end %>
                  <% else %>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" class="sr-only peer" data-password-toggle-target="checkbox" data-action="change->password-toggle#toggle">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                    </label>
                  <% end %>
                </div>
                <% unless @is_free_plan %>
                  <div class="hidden" data-password-toggle-target="field">
                    <%= f.password_field :password,
                        placeholder: t('messages.new.settings.password.placeholder'),
                        minlength: 6,
                        class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="bg-primary-50 rounded-xl p-4 border border-primary-100">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              <div>
                <p class="text-sm font-medium text-primary-900"><%= t('messages.new.notification_info.title') %></p>
                <p class="text-sm text-primary-700"><%= current_user.email %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </main>
</div>

<script>
  (function() {
    const maxFileSize = <%= Message::ATTACHMENT_MAX_SIZE %>;
    const allowedTypes = <%= Message::ATTACHMENT_ALLOWED_TYPES.to_json.html_safe %>;
    const fileTooLargeMsg = '<%= j t("js.file_too_large", size: "{size}") %>';
    const invalidFileTypeMsg = '<%= j t("js.invalid_file_type") %>';
    const maxLength = <%= Message::CONTENT_MAX_LENGTH %>;
    const titleMaxLength = <%= Message::TITLE_MAX_LENGTH %>;
    const charactersText = '<%= j t('common.characters') %>';

    // Trix events - register once globally
    if (!window.messageFormEventsRegistered) {
      window.messageFormEventsRegistered = true;

      document.addEventListener('trix-file-accept', function(event) {
        const file = event.file;
        if (file.size > maxFileSize) {
          event.preventDefault();
          alert(fileTooLargeMsg.replace('{size}', (maxFileSize / 1024 / 1024)));
          return;
        }
        if (!allowedTypes.includes(file.type)) {
          event.preventDefault();
          alert(invalidFileTypeMsg);
          return;
        }
      });

      document.addEventListener('trix-change', function(event) {
        const editor = event.target.editor;
        if (!editor) return;

        const contentCharCount = document.getElementById('content-char-count');
        if (!contentCharCount) return;

        const getPlainTextLength = (ed) => ed.getDocument().toString().replace(/\n$/, '').length;
        const length = getPlainTextLength(editor);

        // Enforce limit
        if (length > maxLength) {
          const excess = length - maxLength;
          const docLength = editor.getDocument().toString().length;
          editor.setSelectedRange([docLength - excess - 1, docLength - 1]);
          editor.deleteInDirection('backward');
        }

        // Update display
        const displayLength = Math.min(length, maxLength);
        contentCharCount.textContent = displayLength.toLocaleString() + '/' + maxLength.toLocaleString() + ' ' + charactersText;
        contentCharCount.classList.remove('text-gray-400', 'text-amber-500');
        contentCharCount.classList.add(length >= maxLength ? 'text-amber-500' : 'text-gray-400');
      });

      document.addEventListener('trix-initialize', function() {
        const trixEditor = document.querySelector('trix-editor');
        const contentCharCount = document.getElementById('content-char-count');
        if (trixEditor && trixEditor.editor && contentCharCount) {
          const length = trixEditor.editor.getDocument().toString().replace(/\n$/, '').length;
          contentCharCount.textContent = length.toLocaleString() + '/' + maxLength.toLocaleString() + ' ' + charactersText;
        }
      });
    }

    // Title character count - runs on each page load
    function initTitleCount() {
      const titleInput = document.getElementById('message-title-input');
      const titleCharCount = document.getElementById('title-char-count');

      if (titleInput && titleCharCount) {
        const updateTitleCount = function() {
          if (titleInput.value.length > titleMaxLength) {
            titleInput.value = titleInput.value.substring(0, titleMaxLength);
          }
          titleCharCount.textContent = titleInput.value.length;
        };

        titleInput.addEventListener('input', updateTitleCount);
        titleInput.addEventListener('compositionend', updateTitleCount);
        updateTitleCount();
      }
    }

    // Run immediately if DOM is ready, otherwise wait
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTitleCount);
    } else {
      initTitleCount();
    }
    document.addEventListener('turbo:load', initTitleCount);
  })();
</script>

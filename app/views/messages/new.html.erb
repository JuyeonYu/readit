<% content_for(:title) { "Compose Message - MessageOpen" } %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center gap-8">
          <%= link_to root_path, class: "flex items-center gap-2" do %>
            <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <span class="font-semibold text-gray-900">MessageOpen</span>
          <% end %>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-gray-500 hidden sm:block"><%= current_user.email %></span>
          <%= link_to root_path, class: "text-sm text-gray-600 hover:text-gray-900" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%= form_with model: @message, id: "message-form", data: { controller: "message-form", turbo_frame: "_top" } do |f| %>

      <!-- Error Messages -->
      <% if @message.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-xl p-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <% @message.errors.full_messages.each do |msg| %>
                <p class="text-sm text-red-700"><%= msg %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid lg:grid-cols-5 gap-8">
        <!-- Left Column - Message Composer (60%) -->
        <div class="lg:col-span-3">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <!-- Editor Header -->
            <div class="px-6 py-4 border-b border-gray-100">
              <h1 class="text-lg font-semibold text-gray-900">Compose Message</h1>
              <p class="text-sm text-gray-500 mt-1">Write your message and share it with anyone</p>
            </div>

            <!-- Rich Text Editor -->
            <div class="p-6">
              <div data-controller="trix-editor" class="trix-wrapper">
                <%= f.rich_text_area :content,
                    placeholder: "Write your message...",
                    class: "min-h-[400px] focus:outline-none",
                    data: { message_form_target: "content" } %>
              </div>
            </div>

            <!-- Bottom Actions -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex justify-between items-center">
              <div class="flex items-center gap-3">
                <%= link_to root_path, class: "text-sm text-gray-600 hover:text-gray-900 transition-colors" do %>
                  Cancel
                <% end %>
                <span class="text-xs text-gray-400 hidden sm:block" data-message-form-target="saveStatus">
                  <!-- Auto-save status will appear here -->
                </span>
              </div>
              <button type="submit" class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
                Generate Link
              </button>
            </div>
          </div>
        </div>

        <!-- Right Column - Settings Panel (40%) -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Message Settings -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Message Settings</h2>

            <!-- Title Field -->
            <div class="space-y-4">
              <div>
                <label for="message_title" class="block text-sm font-medium text-gray-700 mb-1">
                  Message Title
                </label>
                <%= f.text_field :title,
                    placeholder: "e.g., Project Proposal",
                    maxlength: 50,
                    class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors",
                    data: { message_form_target: "title", action: "input->message-form#countChars" } %>
                <p class="mt-1 text-xs text-gray-500">
                  <span data-message-form-target="charCount">0</span>/50 characters
                </p>
              </div>

              <!-- Notification Toggle -->
              <div class="flex items-center justify-between py-3 border-t border-gray-100">
                <div>
                  <p class="text-sm font-medium text-gray-900">Notify when opened</p>
                  <p class="text-xs text-gray-500">Get email when someone reads</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" name="notify" checked class="sr-only peer">
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>

              <!-- Expiration -->
              <div class="py-3 border-t border-gray-100">
                <label class="block text-sm font-medium text-gray-900 mb-2">Expire after</label>
                <select name="message[expires_in]" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white">
                  <option value="">Never</option>
                  <option value="1">1 day</option>
                  <option value="7">7 days</option>
                  <option value="30">30 days</option>
                </select>
              </div>

              <!-- Read Limit -->
              <div class="flex items-center justify-between py-3 border-t border-gray-100">
                <div>
                  <p class="text-sm font-medium text-gray-900">One-time read</p>
                  <p class="text-xs text-gray-500">Message disappears after viewing</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <%= f.check_box :max_read_count,
                      { checked: @message.max_read_count == 1, class: "sr-only peer", data: { action: "change->message-form#toggleReadLimit" } },
                      1, nil %>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>

              <!-- Password Protection -->
              <div class="py-3 border-t border-gray-100" data-controller="password-toggle">
                <div class="flex items-center justify-between mb-3">
                  <div>
                    <p class="text-sm font-medium text-gray-900">Password protect</p>
                    <p class="text-xs text-gray-500">Require password to view</p>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" class="sr-only peer" data-password-toggle-target="checkbox" data-action="change->password-toggle#toggle">
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                  </label>
                </div>
                <div class="hidden" data-password-toggle-target="field">
                  <%= f.password_field :password,
                      placeholder: "Enter password (min 6 chars)",
                      minlength: 6,
                      class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Link Preview -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4">Link Preview</h2>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
              <p class="text-xs text-gray-500 mb-2">Your shareable link will look like:</p>
              <code class="text-sm font-mono text-primary-600 break-all">
                <%= request.base_url %>/m/<span class="text-gray-400">xyz123</span>
              </code>
            </div>
            <p class="text-xs text-gray-500 mt-3">
              <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Share this link via email, Slack, WhatsApp, or any channel
            </p>
          </div>

          <!-- Notification Info -->
          <div class="bg-primary-50 rounded-xl p-4 border border-primary-100">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              <div>
                <p class="text-sm font-medium text-primary-900">You'll be notified at</p>
                <p class="text-sm text-primary-700"><%= current_user.email %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </main>
</div>

<!-- Password Toggle Controller -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Password toggle functionality
    document.querySelectorAll('[data-controller="password-toggle"]').forEach(function(container) {
      const checkbox = container.querySelector('[data-password-toggle-target="checkbox"]');
      const field = container.querySelector('[data-password-toggle-target="field"]');

      if (checkbox && field) {
        checkbox.addEventListener('change', function() {
          if (this.checked) {
            field.classList.remove('hidden');
          } else {
            field.classList.add('hidden');
            field.querySelector('input').value = '';
          }
        });
      }
    });

    // Character count for title
    const titleInput = document.querySelector('[data-message-form-target="title"]');
    const charCount = document.querySelector('[data-message-form-target="charCount"]');

    if (titleInput && charCount) {
      titleInput.addEventListener('input', function() {
        charCount.textContent = this.value.length;
      });
      // Initialize
      charCount.textContent = titleInput.value.length;
    }
  });
</script>

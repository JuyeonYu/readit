<% content_for(:title) { t('messages.edit.title') } %>

<div class="min-h-screen bg-gray-50">
  <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center gap-8">
          <%= render "shared/logo" %>
        </div>
        <div class="flex items-center gap-4">
          <% if @is_free_plan %>
            <%
              badge_color = if @usage_percentage >= 100
                'bg-red-100 text-red-700'
              elsif @usage_percentage >= 80
                'bg-amber-100 text-amber-700'
              else
                'bg-gray-100 text-gray-600'
              end
            %>
            <span class="text-xs font-medium px-2.5 py-1 rounded-full <%= badge_color %> hidden sm:block">
              <%= @messages_this_month %>/<%= @message_limit %> <%= t('dashboard.usage.messages') %>
            </span>
          <% end %>
          <span class="text-sm text-gray-500 hidden sm:block"><%= current_user.email %></span>
          <%= link_to share_message_path(@message.token), class: "text-sm text-gray-600 hover:text-gray-900" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%= form_with model: @message, url: message_path(@message.token), method: :patch, id: "message-form", data: { turbo_frame: "_top" } do |f| %>

      <% if @message.errors.any? %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-xl p-4">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-red-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <% @message.errors.full_messages.each do |msg| %>
                <p class="text-sm text-red-700"><%= msg %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid lg:grid-cols-5 gap-8">
        <div class="lg:col-span-3">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-100">
              <h1 class="text-lg font-semibold text-gray-900"><%= t('messages.edit.header') %></h1>
              <p class="text-sm text-gray-500 mt-1"><%= t('messages.new.subtitle') %></p>
            </div>

            <div class="p-6">
              <div data-controller="trix-editor" class="trix-wrapper">
                <%= f.rich_text_area :content,
                    placeholder: t('messages.new.placeholder'),
                    class: "min-h-[400px] focus:outline-none",
                    data: { message_form_target: "content" } %>
              </div>
            </div>

            <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex justify-between items-center">
              <div class="flex items-center gap-3">
                <%= link_to share_message_path(@message.token), class: "text-sm text-gray-600 hover:text-gray-900 transition-colors" do %>
                  <%= t('common.cancel') %>
                <% end %>
                <span id="content-char-count" class="text-xs text-gray-400 whitespace-nowrap">
                  <%= number_with_delimiter(@message.content_length) %>/<%= number_with_delimiter(Message::CONTENT_MAX_LENGTH) %> <%= t('common.characters') %>
                </span>
              </div>
              <button type="submit" class="inline-flex items-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <%= t('messages.edit.update') %>
              </button>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
          <!-- Basic Settings -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4"><%= t('messages.new.settings.title') %></h2>

            <div class="space-y-4">
              <div>
                <label for="message_title" class="block text-sm font-medium text-gray-700 mb-1">
                  <%= t('messages.new.settings.message_title.label') %>
                </label>
                <%= f.text_field :title,
                    id: "message-title-input",
                    placeholder: t('messages.new.settings.message_title.placeholder'),
                    maxlength: Message::TITLE_MAX_LENGTH,
                    class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
                <p class="mt-1 text-xs text-gray-500">
                  <span id="title-char-count"><%= @message.title&.length || 0 %></span>/<%= Message::TITLE_MAX_LENGTH %> <%= t('common.characters') %>
                </p>
              </div>

              <div class="flex items-center justify-between py-3 border-t border-gray-100">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= t('messages.new.settings.notify.label') %></p>
                  <p class="text-xs text-gray-500"><%= t('messages.new.settings.notify.description') %></p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <%= f.check_box :notify_on_read, { checked: @message.notify_on_read, class: "sr-only peer" }, true, false %>
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                </label>
              </div>

              <div class="py-3 border-t border-gray-100" data-controller="password-toggle">
                <div class="flex items-center justify-between mb-3">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= t('messages.new.settings.password.label') %></p>
                    <p class="text-xs text-gray-500"><%= t('messages.new.settings.password.description') %></p>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" class="sr-only peer" data-password-toggle-target="checkbox" data-action="change->password-toggle#toggle" <%= 'checked' if @message.password_digest.present? %>>
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                  </label>
                </div>
                <div class="<%= 'hidden' unless @message.password_digest.present? %>" data-password-toggle-target="field">
                  <%= f.password_field :password,
                      placeholder: @message.password_digest.present? ? "Leave blank to keep current password" : t('messages.new.settings.password.placeholder'),
                      minlength: 6,
                      class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Pro Features -->
          <%
            # Calculate expires_in value from expires_at
            expires_in_value = ""
            if @message.expires_at.present? && @message.expires_at.future?
              days_remaining = ((@message.expires_at - Time.current) / 1.day).ceil
              expires_in_value = if days_remaining <= 1
                "1"
              elsif days_remaining <= 7
                "7"
              elsif days_remaining <= 30
                "30"
              else
                ""
              end
            end
          %>
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 <%= 'border-primary-200 bg-primary-50/30' if @is_free_plan %>">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider"><%= t('messages.new.settings.pro_features') %></h2>
              <% if @is_free_plan %>
                <%= link_to pricing_path, class: "inline-flex items-center gap-1 px-2 py-1 bg-primary-600 text-white text-xs font-medium rounded-full hover:bg-primary-700 transition-colors" do %>
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                  </svg>
                  Upgrade
                <% end %>
              <% end %>
            </div>

            <div class="space-y-4">
              <div>
                <div class="flex items-center justify-between mb-2">
                  <label class="block text-sm font-medium <%= @is_free_plan ? 'text-gray-500' : 'text-gray-900' %>"><%= t('messages.new.settings.expire.label') %></label>
                </div>
                <% if @is_free_plan %>
                  <%= link_to pricing_path, class: "block" do %>
                    <select disabled class="w-full px-4 py-2.5 border border-gray-200 rounded-lg bg-gray-50 text-gray-400 cursor-pointer appearance-none">
                      <option><%= t('common.never') %></option>
                      <option><%= t('messages.new.settings.expire.day_1') %></option>
                      <option><%= t('messages.new.settings.expire.day_7') %></option>
                      <option><%= t('messages.new.settings.expire.day_30') %></option>
                    </select>
                  <% end %>
                <% else %>
                  <select name="message[expires_in]" class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 bg-white">
                    <option value="" <%= 'selected' if expires_in_value.blank? %>><%= t('common.never') %></option>
                    <option value="1" <%= 'selected' if expires_in_value == "1" %>><%= t('messages.new.settings.expire.day_1') %></option>
                    <option value="7" <%= 'selected' if expires_in_value == "7" %>><%= t('messages.new.settings.expire.day_7') %></option>
                    <option value="30" <%= 'selected' if expires_in_value == "30" %>><%= t('messages.new.settings.expire.day_30') %></option>
                  </select>
                <% end %>
              </div>

              <div class="flex items-center justify-between py-3 border-t border-gray-100">
                <div>
                  <p class="text-sm font-medium <%= @is_free_plan ? 'text-gray-500' : 'text-gray-900' %>"><%= t('messages.new.settings.one_time.label') %></p>
                  <p class="text-xs text-gray-500"><%= t('messages.new.settings.one_time.description') %></p>
                </div>
                <% if @is_free_plan %>
                  <%= link_to pricing_path, class: "relative inline-flex items-center" do %>
                    <div class="w-11 h-6 bg-gray-100 rounded-full cursor-pointer hover:bg-primary-100 transition-colors">
                      <div class="absolute top-[2px] left-[2px] bg-white border-gray-200 border rounded-full h-5 w-5"></div>
                    </div>
                  <% end %>
                <% else %>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <%= f.check_box :max_read_count,
                        { checked: @message.max_read_count == 1, class: "sr-only peer" },
                        1, nil %>
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                  </label>
                <% end %>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4"><%= t('messages.new.link_preview.title') %></h2>
            <p class="text-xs text-gray-500 mb-3"><%= t('messages.new.link_preview.subtitle') %></p>

            <div class="border border-gray-200 rounded-lg overflow-hidden bg-white shadow-sm">
              <div class="bg-gradient-to-br from-primary-500 to-primary-600 h-32 flex items-center justify-center relative">
                <div class="absolute inset-0 opacity-10">
                  <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                    <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
                      <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
                    </pattern>
                    <rect width="100" height="100" fill="url(#grid)"/>
                  </svg>
                </div>
                <div class="text-center z-10">
                  <div class="w-14 h-14 bg-white/20 backdrop-blur rounded-xl flex items-center justify-center mx-auto mb-2">
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <p class="text-white/80 text-xs font-medium"><%= t('messages.new.link_preview.secure_message') %></p>
                </div>
              </div>

              <div class="p-4">
                <h3 class="font-semibold text-gray-900 text-sm leading-snug mb-1" id="og-preview-title">
                  <%= @message.title.presence || t('messages.new.link_preview.default_title') %>
                </h3>
                <p class="text-xs text-gray-500 mb-2 line-clamp-2">
                  <%= t('messages.new.link_preview.description') %>
                </p>
                <div class="flex items-center gap-1.5 text-xs text-gray-400">
                  <div class="w-4 h-4 bg-primary-600 rounded flex items-center justify-center flex-shrink-0">
                    <svg class="w-2.5 h-2.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8"/>
                    </svg>
                  </div>
                  <span class="truncate"><%= display_host %></span>
                </div>
              </div>
            </div>

            <p class="text-xs text-gray-500 mt-3 flex items-start gap-1.5">
              <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span><%= t('messages.new.link_preview.note') %></span>
            </p>
          </div>

          <div class="bg-primary-50 rounded-xl p-4 border border-primary-100">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
              </svg>
              <div>
                <p class="text-sm font-medium text-primary-900"><%= t('messages.new.notification_info.title') %></p>
                <p class="text-sm text-primary-700"><%= current_user.email %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </main>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // File attachment validation for Trix
    const maxFileSize = <%= Message::ATTACHMENT_MAX_SIZE %>;
    const allowedTypes = <%= Message::ATTACHMENT_ALLOWED_TYPES.to_json.html_safe %>;
    const fileTooLargeMsg = '<%= j t("js.file_too_large", size: "{size}") %>';
    const invalidFileTypeMsg = '<%= j t("js.invalid_file_type") %>';

    document.addEventListener('trix-file-accept', function(event) {
      const file = event.file;

      // Check file size
      if (file.size > maxFileSize) {
        event.preventDefault();
        alert(fileTooLargeMsg.replace('{size}', (maxFileSize / 1024 / 1024) + 'MB'));
        return;
      }

      // Check file type
      if (!allowedTypes.includes(file.type)) {
        event.preventDefault();
        alert(invalidFileTypeMsg);
        return;
      }
    });

    // Password toggle functionality
    document.querySelectorAll('[data-controller="password-toggle"]').forEach(function(container) {
      const checkbox = container.querySelector('[data-password-toggle-target="checkbox"]');
      const field = container.querySelector('[data-password-toggle-target="field"]');

      if (checkbox && field) {
        checkbox.addEventListener('change', function() {
          if (this.checked) {
            field.classList.remove('hidden');
          } else {
            field.classList.add('hidden');
            field.querySelector('input').value = '';
          }
        });
      }
    });

    // Character count for title and OG preview update
    const titleInput = document.getElementById('message-title-input');
    const titleCharCount = document.getElementById('title-char-count');
    const ogPreviewTitle = document.getElementById('og-preview-title');
    const defaultTitle = '<%= j t('messages.new.link_preview.default_title') %>';
    const titleMaxLength = <%= Message::TITLE_MAX_LENGTH %>;

    if (titleInput && titleCharCount) {
      const updateTitleCount = function() {
        // Enforce max length for Korean IME
        if (titleInput.value.length > titleMaxLength) {
          titleInput.value = titleInput.value.substring(0, titleMaxLength);
        }
        titleCharCount.textContent = titleInput.value.length;

        // Update OG preview title
        if (ogPreviewTitle) {
          ogPreviewTitle.textContent = titleInput.value.trim() || defaultTitle;
        }
      };

      titleInput.addEventListener('input', updateTitleCount);
      titleInput.addEventListener('compositionend', updateTitleCount);

      // Initialize
      updateTitleCount();
    }

    // Content character count for Trix editor
    const contentCharCount = document.getElementById('content-char-count');
    const maxLength = <%= Message::CONTENT_MAX_LENGTH %>;

    if (contentCharCount) {
      const getPlainTextLength = function(editor) {
        return editor.getDocument().toString().replace(/\n$/, '').length;
      };

      const enforceLimit = function(editor) {
        const length = getPlainTextLength(editor);
        if (length > maxLength) {
          const excess = length - maxLength;
          const docLength = editor.getDocument().toString().length;
          editor.setSelectedRange([docLength - excess - 1, docLength - 1]);
          editor.deleteInDirection('backward');
        }
      };

      const updateContentCharCount = function() {
        const trixEditor = document.querySelector('trix-editor');
        if (trixEditor && trixEditor.editor) {
          const length = getPlainTextLength(trixEditor.editor);
          const displayLength = Math.min(length, maxLength);
          const formatted = displayLength.toLocaleString() + '/' + maxLength.toLocaleString() + ' <%= j t('common.characters') %>';
          contentCharCount.textContent = formatted;

          // Visual warning
          contentCharCount.classList.remove('text-gray-400', 'text-amber-500');
          if (length >= maxLength) {
            contentCharCount.classList.add('text-amber-500');
          } else {
            contentCharCount.classList.add('text-gray-400');
          }
        }
      };

      document.addEventListener('trix-change', function(event) {
        const editor = event.target.editor;
        if (editor) {
          enforceLimit(editor);
        }
        updateContentCharCount();
      });

      document.addEventListener('trix-initialize', updateContentCharCount);
    }
  });
</script>

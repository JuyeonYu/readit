<% content_for(:title) { t('messages.share.title', message_title: @message.title) } %>

<%= render layout: "shared/authenticated_layout", locals: { current_page: "messages" } do %>
  <div x-data="{ showDeleteModal: false, dropdownOpen: false }">
    <% if flash[:notice] || @message.read_count == 0 %>
      <div class="mb-8 bg-green-50 border border-green-200 rounded-xl p-6 text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h2 class="text-xl font-bold text-green-900 mb-2"><%= t('messages.share.success.title') %></h2>
        <p class="text-green-700"><%= t('messages.share.success.subtitle') %></p>
      </div>
    <% end %>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900"><%= t('messages.share.shareable_link') %></h2>
        <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-green-50 text-green-700 text-xs font-medium rounded-full">
          <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <%= t('common.active') %>
        </span>
      </div>

      <div class="flex flex-col sm:flex-row gap-3">
        <div class="flex-1 bg-gray-50 border border-gray-200 rounded-lg px-4 py-3">
          <code id="share-link" class="text-sm font-mono text-gray-900 break-all"><%= display_message_url(@message.token) %></code>
        </div>
        <button
          type="button"
          onclick="copyLink()"
          id="copy-btn"
          class="inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors whitespace-nowrap"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
          </svg>
          <span id="copy-text"><%= t('messages.share.copy_link') %></span>
        </button>
      </div>

      <div class="mt-6 pt-6 border-t border-gray-100">
        <p class="text-sm text-gray-500 mb-3"><%= t('messages.share.share_via') %></p>
        <div class="flex flex-wrap gap-3">
          <a href="mailto:?subject=<%= ERB::Util.url_encode(@message.title) %>&body=<%= ERB::Util.url_encode("Check out this message: #{display_message_url(@message.token)}") %>"
             class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm text-gray-700 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <%= t('common.email') %>
          </a>
          <a href="https://wa.me/?text=<%= ERB::Util.url_encode("#{@message.title}: #{display_message_url(@message.token)}") %>"
             target="_blank"
             class="inline-flex items-center gap-2 px-4 py-2 bg-green-100 hover:bg-green-200 rounded-lg text-sm text-green-700 transition-colors">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
            </svg>
            <%= t('messages.share.whatsapp') %>
          </a>
          <a href="slack://channel?team=&id=&message=<%= ERB::Util.url_encode(display_message_url(@message.token)) %>"
             class="inline-flex items-center gap-2 px-4 py-2 bg-purple-100 hover:bg-purple-200 rounded-lg text-sm text-purple-700 transition-colors">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zM18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312zM15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z"/>
            </svg>
            <%= t('messages.share.slack') %>
          </a>
        </div>
      </div>
    </div>

    <div class="grid lg:grid-cols-2 gap-6">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 flex items-center justify-between">
          <h3 class="font-semibold text-gray-900"><%= t('messages.share.message_content') %></h3>
          <div class="flex items-center gap-2">
            <% if @message.password_digest.present? %>
              <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-purple-50 text-purple-700 text-xs font-medium rounded-full">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                <%= t('messages.share.password_protected') %>
              </span>
            <% end %>
            <div class="relative">
              <button
                type="button"
                @click="dropdownOpen = !dropdownOpen"
                class="p-2 text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                </svg>
              </button>
              <div
                x-show="dropdownOpen"
                @click.outside="dropdownOpen = false"
                x-transition:enter="transition ease-out duration-100"
                x-transition:enter-start="transform opacity-0 scale-95"
                x-transition:enter-end="transform opacity-100 scale-100"
                x-transition:leave="transition ease-in duration-75"
                x-transition:leave-start="transform opacity-100 scale-100"
                x-transition:leave-end="transform opacity-0 scale-95"
                x-cloak
                class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-10"
              >
                <%= link_to edit_message_path(@message.token), class: "flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t('messages.share.actions.edit') %>
                <% end %>
                <button
                  type="button"
                  @click="dropdownOpen = false; showDeleteModal = true"
                  class="flex items-center gap-2 px-4 py-2 text-sm text-red-600 hover:bg-red-50 w-full text-left"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t('messages.share.actions.delete') %>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="p-6">
          <h4 class="font-medium text-gray-900 mb-3"><%= @message.title %></h4>
          <div class="prose prose-sm max-w-none text-gray-600">
            <%= @message.content %>
          </div>
        </div>
        <% if @message.expires_at.present? || @message.max_read_count.present? %>
          <div class="px-6 py-3 bg-gray-50 border-t border-gray-100 flex flex-wrap gap-2">
            <% if @message.expires_at.present? %>
              <% if @message.expires_at.future? %>
                <span class="inline-flex items-center gap-1 text-xs text-amber-700">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= t('dashboard.message.expires') %> <%= format_date_short(@message.expires_at) %>
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1 text-xs text-red-700">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= t('common.expired') %>
                </span>
              <% end %>
            <% end %>
            <% if @message.max_read_count.present? %>
              <span class="inline-flex items-center gap-1 text-xs text-blue-700">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= t('messages.share.one_time_read') %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100">
          <h3 class="font-semibold text-gray-900"><%= t('messages.share.read_analytics') %></h3>
        </div>

        <div class="grid grid-cols-3 divide-x divide-gray-100 border-b border-gray-100">
          <div class="p-6 text-center">
            <p class="text-3xl font-bold text-primary-600"><%= @message.unique_reader_count %></p>
            <p class="text-sm text-gray-500"><%= t('messages.share.unique_readers') %></p>
          </div>
          <div class="p-6 text-center">
            <p class="text-3xl font-bold text-gray-900"><%= @message.read_count %></p>
            <p class="text-sm text-gray-500"><%= t('messages.share.total_views') %></p>
          </div>
          <div class="p-6 text-center">
            <p class="text-3xl font-bold text-amber-500"><%= @message.total_reactions_count %></p>
            <p class="text-sm text-gray-500"><%= t('messages.share.reactions') %></p>
          </div>
        </div>

        <% reactions = @message.reactions_summary %>
        <% if reactions.any? %>
          <div class="px-6 py-4 border-b border-gray-100 bg-amber-50/50">
            <p class="text-sm text-gray-500 mb-2"><%= t('messages.share.reader_reactions') %></p>
            <div class="flex flex-wrap gap-2">
              <% reactions.sort_by { |_, count| -count }.each do |emoji, count| %>
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-white border border-amber-200 rounded-full text-sm">
                  <span class="text-lg"><%= emoji %></span>
                  <span class="font-medium text-gray-700"><%= count %></span>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="p-6">
          <% if @grouped_reads.any? %>
            <p class="text-sm text-gray-500 mb-4"><%= t('messages.share.recent_activity') %></p>
            <ul class="space-y-3 max-h-64 overflow-y-auto">
              <% @grouped_reads.each_with_index do |(viewer_hash, events), index| %>
                <% latest_event = events.last %>
                <li class="flex items-start gap-3 p-3 bg-gray-50 rounded-lg">
                  <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-sm font-medium text-primary-600">#<%= @total_viewers - index %></span>
                  </div>
                  <div class="flex-1 min-w-0">
                    <% view_count = events.first.try(:view_count) || events.size %>
                    <div class="flex items-center gap-2">
                      <p class="text-sm font-medium text-gray-900"><%= view_count %> <%= view_count > 1 ? t('messages.share.views') : t('messages.share.view') %></p>
                      <% if latest_event.reaction.present? %>
                        <span class="text-lg" title="<%= t('messages.share.reader_reaction') %>"><%= latest_event.reaction %></span>
                      <% end %>
                    </div>
                    <p class="text-xs text-gray-500">
                      <%= t('messages.share.last_read') %> <%= time_ago_in_words(latest_event.read_at) %> <%= t('common.ago') %>
                    </p>
                  </div>
                </li>
              <% end %>
              <% if @has_more_viewers %>
                <li class="flex items-center justify-center py-2">
                  <span class="text-xs text-gray-500">+ <%= @total_viewers - @grouped_reads.size %> more viewers</span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div class="text-center py-8">
              <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
              </div>
              <p class="text-sm text-gray-500"><%= t('messages.share.empty.title') %></p>
              <p class="text-xs text-gray-400 mt-1"><%= t('messages.share.empty.subtitle') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Notification Settings -->
    <div class="mt-6">
      <%= render "messages/notify_toggle", message: @message %>
    </div>

    <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
      <%= link_to new_message_path, class: "inline-flex items-center justify-center gap-2 bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <%= t('messages.share.actions.create_another') %>
      <% end %>
      <%= link_to root_path, class: "inline-flex items-center justify-center gap-2 text-gray-600 hover:text-gray-900 px-6 py-3 rounded-lg font-medium transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <%= t('nav.all_messages') %>
      <% end %>
    </div>

    <!-- Delete Confirmation Modal -->
    <div
      x-show="showDeleteModal"
      x-cloak
      class="fixed inset-0 z-50 flex items-center justify-center p-4"
      @keydown.escape.window="showDeleteModal = false"
    >
      <div
        x-show="showDeleteModal"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="absolute inset-0 bg-black/50 backdrop-blur-sm"
        @click="showDeleteModal = false"
      ></div>

      <div
        x-show="showDeleteModal"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-200"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="relative bg-white rounded-2xl shadow-2xl max-w-md w-full p-8 text-center"
      >
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        </div>

        <h3 class="text-xl font-bold text-gray-900 mb-2"><%= t('messages.share.delete_confirm.title') %></h3>
        <p class="text-gray-600 mb-6">
          <%= t('messages.share.delete_confirm.description') %>
        </p>

        <div class="flex flex-col sm:flex-row gap-3">
          <button
            type="button"
            @click="showDeleteModal = false"
            class="flex-1 inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-gray-700 rounded-xl font-medium hover:bg-gray-50 transition-colors"
          >
            <%= t('messages.share.delete_confirm.cancel') %>
          </button>
          <%= button_to message_path(@message.token), method: :delete, form: { class: "flex-1" }, class: "w-full inline-flex items-center justify-center gap-2 bg-red-600 text-white px-6 py-3 rounded-xl font-semibold hover:bg-red-700 transition-colors" do %>
            <%= t('messages.share.delete_confirm.confirm') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<style>
  [x-cloak] { display: none !important; }
</style>

<script>
(function() {
  let copyResetTimer = null;

  window.copyLink = function() {
    const link = document.getElementById('share-link').textContent;
    const btn = document.getElementById('copy-btn');
    const btnText = document.getElementById('copy-text');

    navigator.clipboard.writeText(link).then(() => {
      // Clear any pending reset timer
      if (copyResetTimer) {
        clearTimeout(copyResetTimer);
      }

      // Show success state
      btn.classList.remove('bg-primary-600', 'hover:bg-primary-700');
      btn.classList.add('bg-green-600', 'hover:bg-green-700');
      btnText.textContent = '<%= j t('common.copied') %>';

      // Reset after 2 seconds
      copyResetTimer = setTimeout(() => {
        btn.classList.remove('bg-green-600', 'hover:bg-green-700');
        btn.classList.add('bg-primary-600', 'hover:bg-primary-700');
        btnText.textContent = '<%= j t('messages.share.copy_link') %>';
        copyResetTimer = null;
      }, 2000);
    });
  };

  // Clean up timer when navigating away (Turbo)
  document.addEventListener('turbo:before-cache', function() {
    if (copyResetTimer) {
      clearTimeout(copyResetTimer);
      copyResetTimer = null;
    }
  });
})();
</script>

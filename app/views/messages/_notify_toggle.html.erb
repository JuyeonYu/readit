<div id="notify-toggle" class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
  <div class="flex items-center gap-3">
    <div class="w-8 h-8 bg-primary-100 rounded-lg flex items-center justify-center">
      <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
      </svg>
    </div>
    <div>
      <p class="text-sm font-medium text-gray-900"><%= t('messages.share.notify_toggle.label') %></p>
      <p class="text-xs text-gray-500"><%= t('messages.share.notify_toggle.description') %></p>
    </div>
  </div>
  <%= button_to toggle_notify_message_path(message.token), method: :patch, class: "relative inline-flex items-center cursor-pointer", data: { turbo_frame: "_top" } do %>
    <div class="w-11 h-6 <%= message.notify_on_read? ? 'bg-primary-600' : 'bg-gray-200' %> rounded-full transition-colors">
      <div class="absolute top-[2px] <%= message.notify_on_read? ? 'left-[22px]' : 'left-[2px]' %> bg-white border-gray-300 border rounded-full h-5 w-5 transition-all"></div>
    </div>
  <% end %>
</div>

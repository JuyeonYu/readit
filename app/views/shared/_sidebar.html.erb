<aside class="hidden lg:flex lg:flex-col lg:w-64 lg:fixed lg:inset-y-0 bg-gray-50 border-r border-gray-200">
  <div class="px-6 py-5 border-b border-gray-200">
    <%= render "shared/logo" %>
  </div>

  <nav class="flex-1 px-4 py-6 space-y-1">
    <%= link_to dashboard_path, class: nav_link_class("dashboard", current_page) do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </svg>
      <%= t('nav.dashboard') %>
    <% end %>

    <%= link_to root_path, class: nav_link_class("messages", current_page) do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      <%= t('nav.messages') %>
    <% end %>

    <%= link_to notifications_path, class: nav_link_class("notifications", current_page) do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
      </svg>
      <%= t('nav.notifications') %>
    <% end %>

    <%= link_to billing_path, class: nav_link_class("billing", current_page) do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
      </svg>
      <%= t('nav.billing') %>
    <% end %>
  </nav>

  <% if @nav_is_free_plan %>
    <div class="px-4 py-4 border-t border-gray-200">
      <div class="bg-primary-50 rounded-xl p-4 border border-primary-100">
        <div class="flex items-center justify-between mb-2">
          <span class="text-xs font-semibold text-primary-700 uppercase tracking-wider"><%= t('nav.free_plan') %></span>
          <span class="text-xs font-medium text-primary-600"><%= @nav_messages_this_month %>/<%= @nav_message_limit %> <%= t('nav.messages_count') %></span>
        </div>

        <div class="w-full bg-primary-100 rounded-full h-2 mb-3">
          <%
            bar_color = if @nav_usage_percentage >= 100
              'bg-red-500'
            elsif @nav_usage_percentage >= 80
              'bg-amber-500'
            else
              'bg-green-500'
            end
          %>
          <div class="<%= bar_color %> h-2 rounded-full transition-all duration-300" style="width: <%= @nav_usage_percentage %>%"></div>
        </div>

        <p class="text-xs text-primary-600 mb-3"><%= t('nav.upgrade_description') %></p>

        <%= link_to pricing_path, class: "block w-full text-center text-sm font-semibold text-white bg-primary-600 hover:bg-primary-700 py-2 rounded-lg transition-colors" do %>
          <%= t('nav.upgrade_now') %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="px-4 py-4 border-t border-gray-200">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center">
        <span class="text-sm font-medium text-primary-600"><%= current_user.email[0].upcase %></span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate"><%= current_user.email %></p>
      </div>
      <%= button_to logout_path, method: :delete, class: "text-gray-400 hover:text-gray-600" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
      <% end %>
    </div>
  </div>
</aside>

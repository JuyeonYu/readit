<!-- Footer -->
<footer class="bg-gray-900 text-gray-400 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <%= link_to root_path, class: "flex items-center gap-2 mb-4" do %>
          <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="font-semibold text-white">MessageOpen</span>
        <% end %>
        <p class="text-sm text-gray-500">Know when your messages are read.</p>
      </div>

      <!-- Product -->
      <div>
        <h4 class="text-white font-semibold mb-4">Product</h4>
        <ul class="space-y-2 text-sm">
          <li><%= link_to "Home", root_path, class: "hover:text-white transition-colors" %></li>
          <li><%= link_to "Pricing", pricing_path, class: "hover:text-white transition-colors" %></li>
          <% if logged_in? %>
            <li><%= link_to "Dashboard", dashboard_path, class: "hover:text-white transition-colors" %></li>
          <% else %>
            <li><%= link_to "Get Started", login_path, class: "hover:text-white transition-colors" %></li>
          <% end %>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="text-white font-semibold mb-4">Legal</h4>
        <ul class="space-y-2 text-sm">
          <li><%= link_to "Privacy Policy", privacy_path, class: "hover:text-white transition-colors" %></li>
          <li><%= link_to "Terms of Service", terms_path, class: "hover:text-white transition-colors" %></li>
          <li><%= link_to "Refund Policy", refund_path, class: "hover:text-white transition-colors" %></li>
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h4 class="text-white font-semibold mb-4">Support</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="mailto:hello@messageopen.com" class="hover:text-white transition-colors">Contact Us</a></li>
          <% if logged_in? %>
            <li><%= link_to "Billing", billing_path, class: "hover:text-white transition-colors" %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-gray-800 pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm">&copy; <%= Time.current.year %> MessageOpen. All rights reserved.</p>
      <div class="flex items-center gap-4 text-sm">
        <%= link_to "Privacy", privacy_path, class: "hover:text-white transition-colors" %>
        <span class="text-gray-700">|</span>
        <%= link_to "Terms", terms_path, class: "hover:text-white transition-colors" %>
        <span class="text-gray-700">|</span>
        <%= link_to "Refund", refund_path, class: "hover:text-white transition-colors" %>
      </div>
    </div>
  </div>
</footer>

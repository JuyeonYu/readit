<%# Language Switcher Component %>
<%# Pass direction: :up for dropdowns that should open upward (e.g., in sidebar bottom) %>
<% direction ||= :down %>
<div x-data="{ open: false }" class="relative" @click.away="open = false">
  <button
    @click="open = !open"
    class="flex items-center gap-1.5 px-2.5 py-1.5 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
    </svg>
    <span class="font-medium"><%= { en: 'EN', ko: '한', ja: '日' }[I18n.locale] %></span>
    <svg class="w-3.5 h-3.5 transition-transform" :class="open && 'rotate-180'" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
    </svg>
  </button>

  <div
    x-show="open"
    x-cloak
    x-transition:enter="transition ease-out duration-100"
    x-transition:enter-start="transform opacity-0 scale-95"
    x-transition:enter-end="transform opacity-100 scale-100"
    x-transition:leave="transition ease-in duration-75"
    x-transition:leave-start="transform opacity-100 scale-100"
    x-transition:leave-end="transform opacity-0 scale-95"
    class="absolute <%= direction == :up ? 'bottom-full mb-1 left-0' : 'top-full mt-1 right-0' %> w-32 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50"
  >
    <%= button_to locale_path(:en), method: :patch, class: "w-full flex items-center justify-between px-3 py-2 text-sm hover:bg-gray-50 transition-colors #{I18n.locale == :en ? 'text-primary-600 font-medium' : 'text-gray-700'}" do %>
      English
      <% if I18n.locale == :en %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      <% end %>
    <% end %>

    <%= button_to locale_path(:ko), method: :patch, class: "w-full flex items-center justify-between px-3 py-2 text-sm hover:bg-gray-50 transition-colors #{I18n.locale == :ko ? 'text-primary-600 font-medium' : 'text-gray-700'}" do %>
      한국어
      <% if I18n.locale == :ko %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      <% end %>
    <% end %>

    <%= button_to locale_path(:ja), method: :patch, class: "w-full flex items-center justify-between px-3 py-2 text-sm hover:bg-gray-50 transition-colors #{I18n.locale == :ja ? 'text-primary-600 font-medium' : 'text-gray-700'}" do %>
      日本語
      <% if I18n.locale == :ja %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      <% end %>
    <% end %>
  </div>
</div>
